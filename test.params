############################
###  General parameters  ###
############################

## name of session
session=

## list of ROIs to extract DBSI values for 
roilist=ROIs

############################
### FreeSurfer variables ###
############################

## full path to subject FreeSurfer's mri folder
fsdir=

## full path to FreeSurfer installation
fs_home=/usr/local/pkg/FreeSurfer-5.3-HCP

## file from FreeSurfer mri folder to use for T1
t1=T1.mgz

## file from FreeSurfer mri folder to use for ROIs
parc=wmparc.mgz


############################
###       Diffusion      ###
############################

## full path to subject's T2 image
t2wimg=

## subject's b0 map file (this should be in the dbsi_path folder)
b0img=

## full path to folder containing DBSI images
dbsi_path=

## names of DBSI scans to process
dbsi_scans=cell_ratio_map,hind_ratio_map
